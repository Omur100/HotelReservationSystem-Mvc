
@{
    ViewBag.Title = "Salonlarımız";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="booking-main">
    <h3>Salonlarımız</h3>
</div>
    <br />
<div class="row">
    @foreach (var ıtem in ViewBag.salonlar)
    {
        if(ıtem.salonlarID == 1) { 
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src=~/Content/@ıtem.salonResmi alt="..." width="350" height="300" />
            <div class="caption">
                <h3>@ıtem.salonBaslik</h3>
                <p><strong>@ıtem.salonBilgi</strong></p>              
            </div>
        </div>
    </div>
        }
        if (ıtem.salonlarID == 2)
        {
    <div class="col-sm-6 col-md-4">

        <div class="thumbnail">
            <img src=~/Content/@ıtem.salonResmi alt="..." width="350" height="300">

            <div class="caption">
                <h3>@ıtem.salonBaslik</h3>
                <p><strong>@ıtem.salonBilgi</strong></p>   
            </div>
        </div>
    </div>}
        if (ıtem.salonlarID == 3)
        {
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src=~/Content/@ıtem.salonResmi alt="..." width="350" height="300"/>
            <div class="caption">
                <h3>@ıtem.salonBaslik</h3>
                <p><strong>@ıtem.salonBilgi</strong></p>   
            </div>
        </div>
    </div>
    }
    }
</div>
<br />
<div class="banner-bottom">
    <a href="index.html"><img src="~/Content/images/logo-1.png" alt=""></a>
    <div class="booking-main">
        <h3>Fitness&Bar</h3>
    </div>
</div>
<br />
@foreach(var spa in ViewBag.slider) {
    if (spa.kategori == "fitness")
    {
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>


    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/Content/@spa.sliderfoto1" alt="Flower">

        </div>

        <div class="item">
            <img src="~/Content/@spa.sliderfoto2" alt="Flower">

        </div>
        <div class="item">
            <img src="~/Content/@spa.sliderfoto3" alt="Flower">

        </div>
        <div class="item">
            <img src="~/Content/@spa.sliderfoto4" alt="Flower">

        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
    }
}
<br />
<br />
@foreach (var spabilgi in ViewBag.salonlar)
{
    if (spabilgi.salonlarID == 4) { 

    <p><strong>@spabilgi.salonBaslik</strong></p>
    <div class="container">
        <div class="detailText">
            <strong>@spabilgi.salonBilgi</strong>
            <br />

            <ul>
                <strong><li>@spabilgi.salonbilgisatiri1</li></strong>
                <strong><li>@spabilgi.salonbilgisatiri2</li></strong>
                <strong><li>@spabilgi.salonbilgisatiri3</li></strong>
                <strong><li>@spabilgi.salonbilgisatiri4</li></strong>
               

            </ul>
        </div>
    </div>
 

    }
}